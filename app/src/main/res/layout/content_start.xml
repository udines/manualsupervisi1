<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.civileng.manualsupervisi.StartActivity"
    tools:showIn="@layout/activity_start"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subdit Teknik Rekonstruksi"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direktorat Preservasi Jalan"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direktorat Jenderal Binaan Marga"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panduan Penanganan"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rehabilitasi dan Rekonstruksi"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/start_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:height="56dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
